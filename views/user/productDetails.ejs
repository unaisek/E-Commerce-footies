    <script>
        function addToWishlist(id) {
            $.ajax({
                url: '/addToWishlist',
                method: 'post',
                data: {
                    query: id
                },
                success: (response) => {
                    if (response.success) {
                        toastr.success("Product added to Wishlist");
                    } else if (response.check) {
                        toastr.error("Already added to wishlsit");
                    }
                }
            })
        }
        function addToCart(id) {
            console.log("hi");
            $.ajax({
                url: '/addToCart',
                method: 'post',
                data: {
                    query: id
                },
                success: (response) => {
                    if (response.success) {
                        toastr.success("Product added to Cart", "", {
                            timeOut: 1500,
                            progressBar: true
                        });
                    } else if (response.check) {
                        toastr.error("Out of Stock!!", "", {
                            timeOut: 1500,
                            progressBar: true
                        });
                    }
                }
            })
        }
    </script>
