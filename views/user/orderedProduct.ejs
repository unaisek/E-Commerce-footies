<%- include('../partials/userPartials/header.ejs') %>

    <!-- BREADCRUMB AREA START -->
    <div class="ltn__breadcrumb-area text-left">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ltn__breadcrumb-inner">
                        <h1 class="page-title">Order Details</h1>
                        <div class="ltn__breadcrumb-list">
                            <ul>
                                <li><a href="/"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span>
                                        Home</a></li>
                                <li>Order Details</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="ltn__team-area pt-110--- pb-90">
        <div class="container">
            <div >
                <div class="col-md-8 col-sm-12 mt-10">
                    <h3>User Details</h3>
                    <p>User Name: <%= orderData.userName %>
                    </p>
                    <p class="mb-0 text-wrap">Address: <%= orderData.deliveryAddress %>
                    </p>
                    <p>Payment Method: <%=orderData.paymentMethod %></p>
                </div>
                <div class="col-md-4"></div>
                <hr>
                
                <h3>Product Details</h3>
                <div class="row">
                    <% products.forEach(product=> { %>
                        <div class="col-lg-4 col-md-6 w-lg-25 h-lg-25 w-md-50 h-md-50 mt-5">
                            <div class="ltn__team-item ltn__team-item-3---">
                                <div class="team-img">
                                    <a href="/productDetails?id=<%=product.productId._id %>"><img
                                            src="/adminAsset/productImages/<%=product.productId.images[product.productId.images.length-1] %>" alt="#"></a>
                                </div>
                                <div class="team-info">
                                    <h4> <a href="team-details.html">
                                            <%=product.productId.productName %>
                                        </a></h4>
                                    <h6 class="ltn__secondary-color">&#8377;
                                        <%=product.productPrice %>
                                    </h6>
                                    <p><%=product.count%> item</p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
            </div>
        </div>
    </div>
    <!-- WISHLIST AREA START -->

    <%- include('../partials/userPartials/footer.ejs') %>